<h1>All Categories</h1>
<hr/>
<div class="col-md-12 clearfix" >
    <% @categories.each do |category| %>
    <div class="col-md-3 pull-center" >
    	<br/>
	    <%= link_to image_tag(category.users.first.profile.image.url(:small), class: "img-circle"), category_path(category.slug), class: "img-circle" %>
        <h2><%= link_to category.name, category_path(category.slug) %></h2>
    </div>
    <% end %>
</div>
<br>
