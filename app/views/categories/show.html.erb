
<% if current_user && current_user.admin? %>
	<%= link_to 'Edit', edit_category_path(@category), class: "pull-right" %>
<% end %>

<h1>
  <%= @category.name %>
  <%= link_to 'Category', categories_path %>
</h1>

<hr/>
<div class="col-md-12 clearfix" >
	<% @category.users.each do |user| %>
		<div class="col-md-3 pull-center" >
			<br/>
			<%= link_to image_tag(user.profile.image.url(:small), class: "img-circle"), vanity_url_path(user.name) %>
			<h3><%= link_to user.profile.display_name, vanity_url_path(user.name) %></h3>
			<% user.leafs.limit(3).each do |leaf| %>
				<%= link_to image_tag(leaf.image.url(:small), width: 60, class: "img-thumbnail"), leaf %>
			<% end %>
		</div>
	<% end %>
</div>

