
<h1>Featured</h1>
<hr/>

<div id="masonry-container" class="transitions-enabled infinite-scroll clearfix row">
	<% @leafs.each do |leaf| %>
	  <div class="box col4">
	  		<%= link_to image_tag(leaf.image.url(:standard)), vanity_leaf_url_path(:user_id => leaf.user.name, :id => leaf.slug) %>
	  		<h3>
	  			<%= link_to leaf.title, vanity_leaf_url_path(:user_id => leaf.user.name, :id => leaf.slug) %>
	  			<br/>
	  			<small>by <%= link_to leaf.user.profile.display_name, vanity_url_path(leaf.user.name) %>
	  		</h3>  			

	  </div>
	<% end %>
 </div>

<br/>