<%= simple_form_for(@leaf) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :copy  %>
    <%= f.input :url %>
    <%= f.input :image %>
    <%= f.input :via_url, as: :hidden %>
    <%= f.input :live, as: :hidden, :value => true %>
    <%= f.input :plays, as: :hidden%>
    <%= f.input :views, as: :hidden %>
    <%= f.input :user_id, as: :hidden %>
    <%= f.input :type, as: :hidden %>
  </div>
  <hr/>
  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
